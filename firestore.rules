rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own user document.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // A user can create, read, update, and delete their own addresses.
    match /addresses/{addressId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/addresses/$(addressId)).data.ownerId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Validation requests can be created by any authenticated user.
    // Reading/updating would typically be restricted to admins or specific validators.
    match /validationRequests/{requestId} {
      allow create: if request.auth != null;
    }
    
    // B2B client data should be restricted. Placeholder rule for now.
    match /b2b_clients/{clientId} {
      allow read, write: if false; 
    }
  }
}
